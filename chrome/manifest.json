{
  "author": "Greg Leuch",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "browseraction38.png"
    },
    "default_popup": "popup.html"
  },
  "description": "Visualize your Internet browsing.",
  "homepage_url": "https://color.camp",
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "name": "Color Camp",
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "<all_urls>"
  ],
  "short_name": "Color.Camp",
  "version": "0.2",
  "externally_connectable": {
    "matches": [
      "*://color.camp/*",
      "http://lh.dev:3000/*"
    ]
  }
}
